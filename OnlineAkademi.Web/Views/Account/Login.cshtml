
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

@model OnlineAkademi.Web.Models.VM.LoginVM

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Oturum Açın</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <!--Jconfirm-->
    <link href="~/lib/jconfirm/jquery-confirm.min.css" rel="stylesheet" />

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/admin/index2.html"><b>Online</b>AKADEMİ</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sisteme giriş yapın</p>

                <form asp-controller="Account" asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl"/>
                    <div class="input-group mb-2">
                        <input asp-for="UserName" class="form-control"
                               placeholder="@Html.DisplayNameFor(l=>l.UserName)">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-12">
                        <input type="password" asp-for="Password" class="form-control"
                               placeholder="@Html.DisplayNameFor(l=>l.UserName)">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" asp-for="RememberMe" id="remember">
                                <label for="remember">
                                    Beni hatırla
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <p class="mb-0 mt-5">
                    <a asp-action="Register" asp-controller="Account" asp-route-ReturnUrl="@ViewContext.HttpContext.Request.Query["ReturnUrl"]" class="text-center">
                        Hizmetlerden faydalanmak için kaydolun
                    </a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>

    <!--Jconfirm-->
    <script src="~/lib/jconfirm/jquery-confirm.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @{
        await Html.RenderPartialAsync("_MessagePartial");
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


</body>
</html>


