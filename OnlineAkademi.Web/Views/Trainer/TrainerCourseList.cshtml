
@model IEnumerable<OnlineAkademi.Web.Models.VM.CourseVM>

@{
    ViewData["Title"] = "Eğitmene Bağlı Kurslar";
}

<p class="text-right">
    <a asp-controller="Trainer" asp-action="TrainerCourseCreate" class="btn btn-primary"><i class="fa fa-plus"></i></a>
</p>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @((item.IsActive)?"Aktif":"Pasif")
                </td>
                <td>                    
                    <a href="#" class="btn btn-danger" data-id="@item.Id">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

    <script>
        $().ready(function () {
            $(".btn-danger").click(function () {
                var deleteBtn=$(this)
                $.ShowConfirm('Uyarı!', 'Kurs eğitmenden tamamen silinecek. Devam edilsin mi?', 'Sil', function () {
                    $.AjaxDelete(
                        deleteBtn,
                        '@Url.Action("TrainerCourseDelete","Trainer")'
                    )
                })

            })
        })
    </script>

}
