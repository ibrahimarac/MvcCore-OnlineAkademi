@model IEnumerable<OnlineAkademi.Web.Models.VM.ListCourseVM>

@{
    ViewData["Title"] = "Tamamlanmış Eğitimleriniz";
}


@{

    if (Model.Count() == 0)
    {
        <p class="text-danger m-3">Belirtilen kriterlere uygun bir kayıt bulunamadı.</p>
    }
    else
    {
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Trainer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quota)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>Dokümanlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trainer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quota)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-action="CourseMaterials" asp-controller="Student" asp-route-id="@item.Id"
                               class="btn btn-success">
                                <i class="fa fa-list"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

}




